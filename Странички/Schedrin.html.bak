    <style>
        *{
            margin:0px;
            padding:0px;
            font-family: 'Roboto', sans-serif;
        }
        .navbar{
            flex-wrap:nowrap;
        }
        .card{
            width: 41rem !important;
        }
        .element{
          position: absolute;
          right: 1rem;
          top: 1rem;
        }
        .element > img{
          width:30px;
          height:30px;
        }
        .element::after{
          content: '';
          position: absolute;
          border-radius: 6px;
          top: -4px;
          left: -5px;
          border: black solid 1px;
          background-color: #ffffff00;
          width: 40px;
          height: 40px; 
        }
